<div class="form-group mb-4">
  <label for="title">Title</label>
  <input
    type="text"
    name="title"
    id="title"
    class="form-control"
    value="<%= article.title %>"
    required
  />
</div>
<div class="form-group mb-4">
  <label for="image">Image</label>
  <input
    type="text"
    name="image"
    id="image"
    class="form-control"
    value="<%= article.image %>"
    required
  />
</div>
<div class="form-group mb-4">
  <label for="image">Source</label>
  <input
    type="text"
    name="source"
    id="source"
    class="form-control"
    value="<%= article.source %>"
    required
  />
</div>
<div class="form-group mb-4">
  <label for="body">Body</label>
  <textarea
    name="body"
    id="body"
    cols="30"
    rows="8"
    class="form-control"
    required
  >
<%= article.body %></textarea
  >
</div>
<div class="form-group mb-4">
  <label for="markdown">Markdown</label>
  <textarea
    name="markdown"
    id="markdown"
    cols="30"
    rows="12"
    class="form-control"
    required
  >
<%= article.markdown %></textarea
  >
</div>
<button type="submit" class="btn btn-primary me-4">Save</button>
<a href="/" class="btn btn-outline-secondary">Cancel</a>
